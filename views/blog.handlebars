<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <!-- post -->
                    {{#each posts}}
                    <div class="col-md-12">
                        <div class="post post-row">
                            <a class="post-img" href="/blog/{{_id}}"><img src="{{image}}"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    <a class="post-category cat-2" href="#">{{category.name}}</a>
                                    <span class="post-date">{{generateDate date 'DD MMM YYYY'}}</span>
                                </div>
                                <h3 class="post-title">
                                    <a href="/blog/{{_id}}">
                                        {{title}}
                                    </a>
                                </h3>
                                <p>
                                    {{truncate content 200}}
                                    <a href="/blog/{{_id}}" class="text-primary">DevamÄ±nÄ± oku.. ðŸ‘†</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <!-- /post -->

                    <div class="col-md-12">
                        <div class="section-row text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    {{#paginate current=current pages=pages}}
                                    {{/paginate}}
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            <!-- aside -->
            <div class="col-md-4">
                <!-- catagories -->
                {{>sidebarCategories}}
                <!-- post widget -->
                {{>sidebarLastestBlogs}}
            </div>
            <!-- /aside -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->