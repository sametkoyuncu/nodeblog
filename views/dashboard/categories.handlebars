<div class="container">
    {{#if sessionFlash.message}}
    <div class="{{sessionFlash.type}} alert-dismissible fade show" role="alert">
        {{sessionFlash.message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kategori Ekle</h6>
                </div>
                <div class="card-body p-0">
                    <form class="needs-validation" action="" method="POST">
                        <div class="col-sm-12 mt-3">
                            {{!-- <label for="firstName">Kategori Adƒ±</label> --}}
                            <input type="text" class="form-control mb-2" name="name" placeholder="Ad.." required>
                            {{!-- <label for="firstName">Kategori Adƒ±</label> --}}
                            <textarea class="form-control mb-2" name="description" rows="2" placeholder="A√ßƒ±klama.."></textarea>
                            <button class="btn btn-primary btn-block mb-3" type="submit">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kategori Listesi</h6>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead class="bg-primary text-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">A√ßƒ±klama</th>
                                <th scope="col" class="text-center">Ayarlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each categories}}
                            <tr>
                                <th scope="row">#</th>
                                <td>{{name}}</td>
                                <td>{{description}}</td>
                                <td class="text-center">
                                    {{!-- <button type="button" class="btn btn-sm btn-info" title="ƒ∞ncele">üëÅÔ∏è</button>
                                    <button type="button" class="btn btn-sm btn-success" title="D√ºzenle">‚úèÔ∏è</button> --}}
                                    <form method="POST" action="/dashboard/categories/{{_id}}?_method=DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>