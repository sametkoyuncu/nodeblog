<!-- post widget -->
<div class="aside-widget">
    <div class="section-title">
        <h2>Latest Blogs</h2>
    </div>
    {{#each (limit posts 4)}}
    <div class="post post-widget">
        <a class="post-img" href="/blog/{{_id}}"><img src="{{image}}" alt=""></a>
        <div class="post-body">
            <h3 class="post-title"><a href="/blog/{{_id}}">{{title}}</a></h3>
        </div>
    </div>
    {{/each}}
</div>
<!-- /post widget -->